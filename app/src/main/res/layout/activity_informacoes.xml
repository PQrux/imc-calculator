<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="#BDF2D2"
    android:orientation="vertical"
    android:padding="20dp"
    android:gravity="center"
    tools:context=".informacoes">

    <TextView
        android:id="@+id/contenos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:text="Ficha cadastral"
        android:textAlignment="center"
        android:textSize="35dp"
        tools:layout_editor_absoluteX="114dp"
        tools:layout_editor_absoluteY="14dp" />

    <EditText
        android:id="@+id/nome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:hint="Nome"
        android:inputType="textPersonName"
        android:singleLine="true"
        tools:layout_editor_absoluteX="12dp"
        tools:layout_editor_absoluteY="159dp" />

    <EditText
        android:id="@+id/altura"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:hint="Altura (em cm)"
        android:inputType="number"
        tools:layout_editor_absoluteX="124dp"
        tools:layout_editor_absoluteY="411dp" />

    <RadioGroup
        android:id="@+id/sexo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/masculino"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Masculino" />

        <RadioButton
            android:id="@+id/feminino"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Feminino" />
    </RadioGroup>

    <EditText
        android:id="@+id/DataNasc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:hint="Ano de nascimento"
        android:inputType="number"
        android:maxLength="4"
        tools:layout_editor_absoluteX="84dp"
        tools:layout_editor_absoluteY="302dp" />

    <Button
        android:id="@+id/prosseguir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Prosseguir"
        android:padding="20dp"
        android:background="#DB524C"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="94dp"
        tools:layout_editor_absoluteY="571dp" />

</LinearLayout>